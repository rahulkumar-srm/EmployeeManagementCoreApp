            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#toggle-state').change(function () {
                if ($(this).prop('checked')) {
                    $('#phone,#submit').removeAttr("disabled");
                }
                else {
                    $('#phone,#submit').prop('disabled', true);
                }
        });
        })
    </script>
}

